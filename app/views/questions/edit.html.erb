<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Edit Question</h1>
    <%= button_to "Delete", question_path(@question), method: :delete %>
    <br><br>
   <%= form_for(@question) do |f| %>

     <div class="field">
       <%= f.label :title %><br>
       <%= f.text_field :title %>
     </div><br />

     <div class="field">
       <%= f.label :description %><br>
       <%= f.text_area :description %>
     </div><br />

     <div class="field">
       <%= f.submit "Update" %>
     </div>

   <% end %>
  </body>
</html>
