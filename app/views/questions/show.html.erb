<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Question: <%= @question.id %></title>
  </head>
  <body>
    <h1><%= @question.title %></h1>

    <p>
      <h2>Description:</h2>
      <%= @question.description %>
    </p>
    <br><br>
<%= render './answers/form' %>
    <br><br>
    <h2>Answers:</h2>
    <% @answers.each do |answer| %>
    <li>
      <%= answer.description %>
    </li>
    <% end %>
  </body>
</html>
