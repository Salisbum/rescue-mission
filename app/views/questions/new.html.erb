<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Submit a New Question</h1>

   <%= form_for(@question) do |f| %>

     <div class="field">
       <%= f.label :title %><br>
       <%= f.text_field :title %>
     </div><br />

     <div class="field">
       <%= f.label :description %><br>
       <%= f.text_area :description %>
     </div><br />

     <div class="field">
       <%= f.submit "Submit Question" %>
     </div>

   <% end %>
  </body>
</html>
